<mvc:View
	controllerName="lvcrft.lovecraftcollection.controller.Master"
	xmlns="sap.m"
	xmlns:core="sap.core"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
>
	<semantic:SemanticPage id="page">
		<semantic:titleHeading>
			<Title text="{i18n>title}"/>
		</semantic:titleHeading>

		<!-- HEADER CONTENT -->


		<semantic:headerContent>
			<l:HorizontalLayout>
				<l:VerticalLayout class="sapUiMediumMarginEnd">
					<ObjectAttribute
						class="w50"
						text="{i18n>title-description}"
					/>
				</l:VerticalLayout>
			</l:HorizontalLayout>
		</semantic:headerContent>


		<!-- MAIN CONTENT -->

	<semantic:content>
			<!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
			<List
				id="list"
				width="auto"
				class="sapFDynamicPageAlignContent"
				items="{path: 'Authors>/authors'}"
				busyIndicatorDelay="{masterView>/delay}"
				noDataText="{masterView>/noDataText}"
				mode="SingleSelectLeft"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished"
				selectionChange="onSelectionChange">
				<infoToolbar>
					<Toolbar
						active="true"
						id="filterBar"
						press=".onOpenViewSettings">
						<Title
							id="filterBarLabel"
							text="{masterView>/filterBarLabel}" />
					</Toolbar>
				</infoToolbar>
				<headerToolbar>
					<OverflowToolbar>
						<SearchField
							id="searchField"
							showRefreshButton="true"
							tooltip="{i18n>masterSearchTooltip}"
							width="100%"
							search=".onSearch">
							<layoutData>
								<OverflowToolbarLayoutData
									minWidth="150px"
									maxWidth="240px"
									shrinkable="true"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
						<ToolbarSpacer/>
						<Button
							id="addButton"
							press=".onAdd"
							tooltip="{i18n>addAuthorBtn}"
							icon="sap-icon://add"
							type="Transparent"/>
						<Button
							id="updateButton"
							press=".onChange"
							tooltip="{i18n>updateAuthorBtn}"
							icon="sap-icon://edit"
							type="Transparent"/>
						<Button
							id="deleteButton"
							press=".onDelete"
							tooltip="{i18n>deleteAuthorBtn}"
							icon="sap-icon://delete"
							type="Transparent"/>
						
					</OverflowToolbar>
				</headerToolbar>

				<CustomListItem
				press="onAuthorPress"
				type="Navigation"
				>
					<HBox>
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<Text text="{Authors>Name}"/>
							<Label text="{Authors>Lastname}"/>
						</VBox>
					</HBox>
		</CustomListItem>
			</List>
		</semantic:content>
	

		

	</semantic:SemanticPage>
</mvc:View>