<mvc:View
	controllerName="lvcrft.lovecraftcollection.controller.Master"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
>
	<semantic:SemanticPage id="page">
		<semantic:titleHeading>
			<Title text="{i18n>main_title}"/>
		</semantic:titleHeading>
		<!-- HEADER CONTENT -->
		<semantic:headerContent>
			<HBox
				class="custom-hbox-header"
				wrap="Wrap"
				justifyContent="SpaceBetween"
			>
				<VBox
					width="500px"
					class="custom-vbox-header"
				>
					<ObjectAttribute text="{i18n>title-description}"/>
				</VBox>
				<VBox class="custom-vbox-header text-center">
					<Avatar
						backgroundColor="Accent6"
						badgeIcon="empty string"
						badgeTooltip=""
						customDisplaySize="3rem"
						customFontSize="1.125rem"
						displayShape="Square"
						displaySize="L"
						fallbackIcon=""
						imageFitType="Cover"
						initials=""
						showBorder="false"
						src="{view>/myths_url}"
					/>
				</VBox>
			</HBox>
		</semantic:headerContent>


		<!-- MAIN CONTENT -->

		
		<semantic:content>
			<List
				id="list"
				width="auto"
				class="sapFDynamicPageAlignContent"
				items="{AUTHORS>/authors}"
				busyIndicatorDelay="{masterView>/delay}"
				noDataText="{masterView>/noDataText}"
				mode="SingleSelectLeft"
				growing="true"
				growingScrollToLoad="true"
				selectionChange="onSelectionChange"
				sticky="HeaderToolbar"
			>
				<headerToolbar>
					<OverflowToolbar>
						<SearchField
							id="searchField"
							showRefreshButton="true"
							showSearchButton="false"
							tooltip="{i18n>masterSearchTooltip}"
							width="100%"
							liveChange="handleSearch"
						>
							<layoutData>
								<OverflowToolbarLayoutData
									minWidth="150px"
									maxWidth="240px"
									shrinkable="true"
									priority="NeverOverflow"
								/>
							</layoutData>
						</SearchField>
						<!-- BUTTONS -->
						<ToolbarSpacer/>
						<Button
							id="addButton"
							press="onAdd"
							tooltip="{i18n>addAuthorBtn}"
							icon="sap-icon://add"
							type="Accept"
							enabled="{= ${view>/isSelected} ? false : true }"
						/>
						<Button
							id="updateButton"
							press="onUpdate"
							tooltip="{i18n>updateAuthorBtn}"
							icon="sap-icon://edit"
							type="Neutral"
							enabled="{view>/isSelected}"
						/>
						<Button
							id="deleteButton"
							press="onDelete"
							tooltip="{i18n>deleteAuthorBtn}"
							icon="sap-icon://delete"
							type="Reject"
							enabled="{view>/isSelected}"
						/>
						<Button
							id="cancelSelectionBtn"
							press="onCancelSelect"
							tooltip="{i18n>cancelSelectBtn}"
							text="Cancel"
							type="Reject"
							visible="{view>/isSelected}"
						/>
					</OverflowToolbar>
				</headerToolbar>
				<CustomListItem
					press="onAuthorPress"
					type="Navigation"
				>
					<HBox>
						<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<Text text="{AUTHORS>Name}"/>
							<Label text="{AUTHORS>Lastname}"/>
						</VBox>
					</HBox>
				</CustomListItem>
			</List>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>