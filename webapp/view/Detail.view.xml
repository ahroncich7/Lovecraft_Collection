<mvc:View xmlns:launchpad="sap.ushell.ui.launchpad"
	xmlns:layout="sap.ui.layout"
	controllerName="lvcrft.lovecraftcollection.controller.Detail"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
>

<Page >
	<!-- AUTHOR FORM -->
	<HBox
		class="custom-hbox-header"
		wrap="Wrap"
		justifyContent="SpaceBetween"
	>
		<VBox
			width="500px"
			class="custom-vbox-header"
		>
			<f:SimpleForm
				id="SimpleFormDisplay354"
				editable="false"
				layout="ResponsiveGridLayout"
				title="{Name} {Lastname}"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false"
			>
				<f:content>
					<Label text="{i18n>nationalityField}"/>
					<Text
						text="{Nationality}"
					/>
					<Label text="{i18n>birth_date}"/>
					<Text text="{Birth}"/>
					<Label text="{i18n>death_date}"/>
					<Text text="{Death}"/>
				</f:content>
			</f:SimpleForm>
		</VBox>
		<VBox class="custom-vbox-header text-center">
			<Image
				src="{ImageUrl}"
				width="200px"
			/>
		</VBox>
	</HBox>
	<!-- BOOKS LIST -->

		<Table
			id="tableID"
			class="sapUiSmallMarginTop"
			width="auto"
			items="{BOOKS>/}"
			updateFinished=".onListUpdateFinished"
			noDataText="{i18n>detailLineItemTableNoDataText}"
		>
			<headerToolbar id="tableContentID">
				<Toolbar id="lineItemsToolbar">
					<Title
						id="lineItemsHeader"
						text="{i18n>books_list_title}"
					/>
					<Button
						icon="sap-icon://add"
						press="onAdd"
					/>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="{i18n>book_title}"/>
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true"
					hAlign="Center"
				>
					<Text text="{i18n>book_published_year}"/>
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true"
					hAlign="Center"
				>
					<Text text="{i18n>book_publisher}"/>
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true"
					hAlign="Center"
				>
					<Text text="{i18n>book_review}"/>
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true"
					hAlign="Center"
				>
					<Text text="{i18n>actions}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier title="{BOOKS>Title}"/>
						<ObjectAttribute text="{BOOKS>PubYear}"/>
						<ObjectAttribute text="{BOOKS>Publisher}"/>
						<Button
						text="{i18n>review_link}"
						class="sapUiSmallMarginBottom"
						press="seeReviewClick"
						width="150px"
						type="Neutral"
						ariaHasPopup="Dialog" />

						<!-- BUTTONS -->

						<layout:HorizontalLayout>
							<Button
								icon="sap-icon://edit"
								press="onUpdate"
								type="Emphasized"
								class="sapUiTinyMarginBeginEnd"
							/>
							<Button
								icon="sap-icon://delete"
								type="Emphasized"
								press="onDelete"
								class="sapUiTinyMarginBeginEnd"
							/>
						</layout:HorizontalLayout>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page >
</mvc:View>